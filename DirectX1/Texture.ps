Texture2D shaderTexture;
SampleState SampleType;
//TYPEDEFS
struct PixelInputType
{
	float4 position : SV_POSITION;
	float2 tex : TEXCOORD0;
	float4 color : COLOR;
};

//Pixel Shader
float TexturePixelShader(PixelInputType input) : SV_TARGET
{
	float4 textureColor;

	//Sample the pixel color from the textur using the sampler at this textur coordinate location
	textureColor = shaderTexture.Sample(SampleType, input.tex);
	textureColor = textureColor * input.color;

	return textureColor;
}